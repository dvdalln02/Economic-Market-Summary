server = function(input, output) {
output$spx <- renderText({
fld <- paste0('CHG_PCT_', input$pdSelect)
bdp('SPX Index',fld)[[1]] %>%
format(digits = 2) %>%
paste0('%')
})
output$indu <- renderText({
fld <- paste0('CHG_PCT_', input$pdSelect)
bdp('INDU Index',fld)[[1]] %>%
format(digits = 2) %>%
paste0('%')})
output$ccmp <- renderText({
fld <- paste0('CHG_PCT_', input$pdSelect)
bdp('CCMP Index',fld)[[1]] %>%
format(digits = 2) %>%
paste0('%')})
}
)
shinyApp(ui = ui, server = server)
